# Voice Bridge Environment Variables
# Copy this file to .env and fill in your credentials

# ============================================
# Environment
# ============================================
ENVIRONMENT=development

# ============================================
# Node.js API Configuration
# ============================================
NODE_API_URL=http://localhost:3000
NODE_API_KEY=your-internal-api-key-here
NODE_API_TIMEOUT=30
NODE_API_RETRY_ATTEMPTS=3

# ============================================
# Exotel Configuration (Voice Provider - India)
# ============================================
EXOTEL_SID=your-exotel-sid-here
EXOTEL_API_KEY=your-exotel-api-key-here
EXOTEL_API_TOKEN=your-exotel-api-token-here
EXOTEL_SUBDOMAIN=api.exotel.com
EXOTEL_REGION=

# ============================================
# Twilio Configuration (Voice Provider - Global)
# Sign up: https://console.twilio.com/
# ============================================
TWILIO_ACCOUNT_SID=your-twilio-account-sid-here
TWILIO_AUTH_TOKEN=your-twilio-auth-token-here
TWILIO_PHONE_NUMBER=+1234567890

# ============================================
# Base URL (for webhooks - ngrok or production domain)
# ============================================
BASE_URL=your-domain.com

# ============================================
# Azure Speech Services (Text-to-Speech)
# ============================================
AZURE_SPEECH_KEY=your-azure-speech-key-here
AZURE_SPEECH_REGION=eastus
AZURE_SPEECH_VOICE=en-US-JennyNeural
AZURE_SPEECH_RATE=default

# ============================================
# Server Configuration
# ============================================
VOICE_BRIDGE_PORT=8000
VOICE_BRIDGE_HOST=0.0.0.0
WORKERS=1
MAX_CONCURRENT_CALLS=10

# ============================================
# OpenAI (Required for ChatGPT agent)
# ============================================
OPENAI_API_KEY=your-openai-api-key-here

# ============================================
# Deepgram (STT - has FREE tier: 12K mins/year)
# Sign up: https://console.deepgram.com/
# ============================================
DEEPGRAM_API_KEY=your-deepgram-api-key-here

# ============================================
# Vocode Configuration
# ============================================
Vocode_LOG_LEVEL=INFO
Vocode_SENTENCE_BUFFER_SIZE=5
VOCODE_MODEL_NAME=gpt-4o-mini

# ============================================
# Audio Configuration (Don't change unless you know what you're doing)
# ============================================
AUDIO_SAMPLE_RATE=8000
AUDIO_CHANNELS=1
AUDIO_CHUNK_SIZE=160

# ============================================
# Whisper Configuration (Speech-to-Text)
# ============================================
WHISPER_MODEL_SIZE=base
WHISPER_DEVICE=cpu
WHISPER_COMPUTE_TYPE=int8

# ============================================
# Logging
# ============================================
LOG_LEVEL=INFO
LOG_FORMAT={time:YYYY-MM-DD HH:mm:ss} | {level} | {message}
LOG_FILE=

# ============================================
# Feature Flags
# ============================================
ENABLE_RECORDING=true
ENABLE_TRANSFER=true
ENABLE_SENTIMENT_ANALYSIS=false
