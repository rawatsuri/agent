# Environment Variables for Render Deployment
# Copy this file to .env and fill in your actual values

# ===========================================
# NODE.JS SERVER ENVIRONMENT VARIABLES
# ===========================================

# Server Configuration
NODE_ENV=production
PORT=3000

# Database (PostgreSQL - will be auto-configured by Render)
# DATABASE_URL will be set automatically by Render Blueprint
# DIRECT_URL will be set automatically by Render Blueprint

# Redis (for caching and queues - will be auto-configured by Render)
# REDIS_URL will be set automatically by Render Blueprint

# OpenAI (Required for AI processing)
OPENAI_API_KEY=sk-your-openai-api-key-here

# Clerk Authentication (Required)
CLERK_SECRET_KEY=sk_test_your-clerk-secret-key
CLERK_PUBLISHABLE_KEY=pk_test_your-clerk-publishable-key

# Exotel Configuration (for Voice and SMS)
EXOTEL_API_KEY=your-exotel-api-key
EXOTEL_API_TOKEN=your-exotel-api-token
EXOTEL_SID=your-exotel-sid

# SendGrid (for Email)
SENDGRID_API_KEY=SG.your-sendgrid-api-key

# Meta/WhatsApp Configuration
META_APP_ID=your-meta-app-id
META_APP_SECRET=your-meta-app-secret
META_ACCESS_TOKEN=your-meta-access-token
WHATSAPP_PHONE_NUMBER_ID=your-whatsapp-phone-number-id

# Telegram Bot
TELEGRAM_BOT_TOKEN=your-telegram-bot-token

# Azure Text-to-Speech
AZURE_TTS_KEY=your-azure-tts-key
AZURE_TTS_REGION=your-azure-region

# Voice Bridge URL (auto-configured if using Blueprint)
VOICE_BRIDGE_URL=https://omnichannel-ai-voice.onrender.com

# Optional: Twilio (alternative to Exotel)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=your-twilio-phone-number

# ===========================================
# PYTHON VOICE BRIDGE ENVIRONMENT VARIABLES
# ===========================================

# Node.js API URL (auto-configured if using Blueprint)
NODE_API_URL=https://omnichannel-ai-api.onrender.com

# Deepgram (optional - for alternative STT)
DEEPGRAM_API_KEY=your-deepgram-api-key

# Whisper Model Configuration
WHISPER_MODEL=base
WHISPER_MODEL_PATH=/tmp/whisper-models

# ===========================================
# FRONTEND ENVIRONMENT VARIABLES
# ===========================================

# API URLs (auto-configured if using Blueprint)
VITE_API_URL=https://omnichannel-ai-api.onrender.com

# Clerk (must match backend)
VITE_CLERK_PUBLISHABLE_KEY=pk_test_your-clerk-publishable-key
